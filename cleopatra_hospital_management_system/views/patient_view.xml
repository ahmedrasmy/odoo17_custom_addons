<odoo>


<!--    ######################## Start Form #########################-->
    <record id="view_hospital_patient_form" model="ir.ui.view">
         <field name="name" > Patient form</field>
        <field name="model" >hospital.patient</field>
        <field name="arch" type="xml">
            <form create="1" edit="1" delete="0">
                <sheet string="Patient">
                    <group>
                        <group string="General Info.">

                                <field name="name"/>

                        </group>
                        <group string="Additional Info.">

                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!--    ######################## End Form #########################-->
    <!--    ######################## Start Tree #########################-->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
         <field name="name" > patient tree</field>
        <field name="model" >hospital.patient</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
            </tree>
        </field>
    </record>
        <!--    ######################## End Tree #########################-->
        <!--    ######################## Start Action #########################-->
     <record id="action_patient_views" model="ir.actions.act_window">
        <field name="name">Cleopatra Patient</field>
         <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
         <field name="view_mode">tree,form</field>
         <field name="target" >current</field>
         <field name="help" type="html" >
             <a class="o_view_nocontent_smiling_face" >
                 create your first patient
             </a>
         </field>
    </record>
        <!--    ######################## End Action #########################-->
    <menuitem
        id = 'menu_cleopatra_root'
        name = 'Cleopatra'
    />
<menuitem
        id = 'menu_patient_views'
        name = 'Patients'
        parent = "menu_cleopatra_root"
        action = "action_patient_views"
    />


</odoo>